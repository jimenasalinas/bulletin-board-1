<div>
  <div>
    <h1>
     <%= @the_board.name %> 
    </h1>

    <hr>

    <h2>Add a new post</h2>

    <form action="/insert_post" method=post>

    <div>
    <label for="title_field">Title</label>
    <input id="title_field" type="text" name="title">
    </div>

    <div>
      <label for="body_field">Body</label>
      <textarea name="body" id="body_field" cols="30" rows="10"></textarea>
    </div>

    <div>
      <label for="expires_on_field">Expires on</label>
      <input type="date" id="expires_on_field" name="expires_on_field">
    </div>

      <div>
      <label for="board_id">Board ID</label>
      <input type="text" id="board_id" name="expires_on_field">
    </div>

    <hr>

    <button>
    Create post
    </button>

    </form>

<div>
  <div>
    <h2>
      Edit board
    </h2>

    <form action="/modify_board/<%= @the_board.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_board.name %>">
      </div>

      <button>
        Update board
      </button>
    </form>
  </div>
</div>

<hr>
